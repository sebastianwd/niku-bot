{
  "compilerOptions": {
    "target": "ES2022",
    "allowJs": true,
    "noEmit": true,
    "module": "preserve",
    "lib": [
      "es2022",
      "esnext.asynciterable"
    ],
    "outDir": "./dist",
    "declaration": false,
    "composite": false,
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "sourceMap": false,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    },
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": [
    "src",
    "eslint.config.ts",
    "prettier.config.mjs",
    "tsdown.config.ts",
  ]
}